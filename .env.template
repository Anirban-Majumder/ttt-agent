# Google Gemini API Key (preferred by new SDK)
GOOGLE_API_KEY=your_gemini_api_key_here
# Legacy variable name (still supported)  
GEMINI_API_KEY=your_gemini_api_key_here

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chroma_db

# Agent Configuration
AGENT_NAME=TTT-Agent
MAX_ITERATIONS=10
PLANNING_TIMEOUT=30
EXECUTION_TIMEOUT=120

# UI Configuration
GRADIO_PORT=7860
GRADIO_HOST=localhost

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/agent.log

# Memory Configuration
MAX_CONVERSATION_HISTORY=100
MAX_TASK_MEMORY=50
MEMORY_RETRIEVAL_K=5

# Tool Configuration
AUTO_APPROVE_SAFE_TOOLS=false
REQUIRE_CONFIRMATION_BY_DEFAULT=true
